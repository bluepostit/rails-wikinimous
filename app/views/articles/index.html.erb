<div class="container">
  <div class="my-4">
    <span class="h1">Articles</span>
    <span class="small ml-1"><%= link_to 'New...', new_article_path %></span>
  </div>

  <ul class="articles">
    <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article) %>
      <span class="ml-2">
        <%= link_to article_path(article), method: :delete, data: {
          confirm: "Are you sure you want to delete '#{article.title}'?"} do %>
        <i class="fa fa-trash-o"></i>
        <% end %>
      </span>
    </li>
    <% end %>
  </ul>
  <div class="my-3">
    add new
  </div>
</div>
